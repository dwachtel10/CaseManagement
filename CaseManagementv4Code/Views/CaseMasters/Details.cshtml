        <dd>
            @Html.DisplayFor(model => model.CaseNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Agency)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Agency)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Judge)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Judge)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FilingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FilingDate)
        </dd>
        <dd>
